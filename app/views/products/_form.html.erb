<%= form_for(product) do |f| %>

  <fieldset>
    <legend><%= t(:product_info) %></legend>

    <div class="field">
      <%= f.label t(:manufacturer) %>
      <%= f.text_field :manufacturer, require: true %>
    </div>

    <div class="field">
      <%= f.label t(:shop) %>
      <%= f.text_field :shop %>
    </div>

    <div class="field">
      <%= f.label t(:code) %>
      <%= f.text_field :code %>
    </div>

    <div class="field">
      <%= f.label t(:title) %>
      <%= f.text_field :title, autofocus: true, require: true %>
    </div>
  </fieldset>

  <fieldset>
    <legend><%= t(:details) %></legend>

    <div class="field">
      <%= f.label t(:liquid) %>
      <%= f.radio_button :liquid, true %>
      <%= f.label t(:solid) %>
      <%= f.radio_button :liquid, false, checked: (!product.liquid) %>
    </div>

    <div class="field">
      <% unit = if product.liquid then 'ml' else 'g' end %>
      <%= f.label t(:amount) %>
      <%= f.number_field :amount, require: true %><span class='unit'><%= unit %></span>
    </div>

    <div class="field">
      <%= f.label t(:price) %>
      <%= f.number_field :price, require: true, step: 0.01 %>
    </div>
  </fieldset>

  <fieldset>
    <legend><%=t(:nutritionals) %> / 100 <span class='unit'><%= unit %></span></legend>

    <div class="field">
      <%= f.label :energy %>
      <%= f.number_field :energy %>J
    </div>

    <div class="field">
      <%= f.label :fat_total %>
      <%= f.number_field :fat_total, step: 0.1 %>g
    </div>

    <div class="field">
      <%= f.label :fat_saturated %>
      <%= f.number_field :fat_saturated, step: 0.1 %>g
    </div>

    <div class="field">
      <%= f.label :carbohydrate %>
      <%= f.number_field :carbohydrate, step: 0.1 %>g
    </div>

    <div class="field">
      <%= f.label :sugar %>
      <%= f.number_field :sugar, step: 0.1 %>g
    </div>

    <div class="field">
      <%= f.label :fiber %>
      <%= f.number_field :fiber, step: 0.1 %>g
    </div>

    <div class="field">
      <%= f.label :protein %>
      <%= f.number_field :protein, step: 0.1 %>g
    </div>
  </fieldset>

  <fieldset>
    <legend><%= t(:vitamins) %> / 100 <%= unit %></legend>

    <div class="field">
      <%= f.label :a, 'Vitamin A' %>
      <%= f.number_field :a, step: 0.1 %>ug
    </div>

    <div class="field">
      <%= f.label :b9, 'FolsÃ¤ure' %>
      <%= f.number_field :b9, step: 0.1 %>ug
    </div>
  </fieldset>

  <fieldset>
    <legend><%= t(:minerals) %> / 100 <span class='unit'><%= unit %></span></legend>

    <div class="field">
      <%= f.label :natrium %>
      <%= f.number_field :natrium, step: 0.01 %>mg
    </div>
    <div class="field">
      <%= f.label :potassium %>
      <%= f.number_field :potassium, step: 0.01 %>mg
    </div>
    <div class="field">
      <%= f.label :magnesium %>
      <%= f.number_field :magnesium, step: 0.01 %>mg
    </div>
    <div class="field">
      <%= f.label :calcium %>
      <%= f.number_field :calcium, step: 0.01 %>mg
    </div>
  </fieldset>

  <fieldset>
    <div class="actions">
      <%= f.submit t(:product_save) %>
    </div>
  </fieldset>
<% end %>
