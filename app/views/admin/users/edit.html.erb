<aside>
  <% if @user.errors.any? %>
  <section class='error'>
    <% @user.errors.full_messages.each do |message| %>
      <p><%= message %><p>
    <% end %>
      </ul>
  </section>
  <% end %>

  <% if alert %>
  <section class='alert'>
    <p id='alert'><%= alert %></p>
  </section>
  <% end %>
</aside>

<article>
  <h2><%= t(:user_update) %></h2>

  <%= form_for [:admin, @user], url: update_nick_admin_user_path do |f| %>
  <fieldset>
    <legend><%= t(:personalia) %></legend>

    <div class="field">
      <%= f.label t(:nick) %>
      <%= f.text_field :nick, autofocus: true, require: true %>
    </div>

  </fieldset>
  <fieldset>

    <div class="actions">
      <%= f.submit t(:update_settings) %>
    </div>

  </fieldset>
  <% end %>

  <%= form_for [:admin, @user], url: update_email_admin_user_path do |f| %>
  <fieldset>
    <legend><%= t(:contact) %></legend>

    <div class="field">
      <%= f.label t(:email) do %>
        <%= t(:email) %>
      <% end %>
      <%= f.email_field :email, placeholder: @user.email, require: true %>
    </div>
    <div class="field">
      <%= f.label t(:email_confirm) do %>
        <%= t(:email_confirm) %>
      <% end %>
      <%= f.email_field :email_confirmation, require: true %>
    </div>

  </fieldset>
  <fieldset>

    <div class="actions">
      <%= f.submit t(:update_email) %>
    </div>

  </fieldset>
  <% end %>

  <%= form_for [:admin, @user], url: update_password_admin_user_path  do |f| %>
  <fieldset>
    <legend><%= t(:security) %></legend>

    <div class="field">
      <%= f.label t(:password) %>
      <%= f.password_field :password, placeholder: '********', require: true %>
    </div>
    <div class="field">
      <%= f.label t(:password_confirm) %>
      <%= f.password_field :password_confirmation, require: true %>
    </div>

  </fieldset>
  <fieldset>

    <div class="actions">
      <%= f.submit t(:update_password) %>
    </div>

  </fieldset>
  <% end %>

</article>
