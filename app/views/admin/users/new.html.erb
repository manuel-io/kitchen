<aside>
  <% if @user.errors.any? %>
  <section class='error'>
    <% @user.errors.full_messages.each do |message| %>
      <p><%= message %><p>
    <% end %>
      </ul>
  </section>
  <% end %>

  <% if alert %>
  <section class='alert'>
    <p id='alert'><%= alert %></p>
  </section>
  <% end %>
</aside>

<article>
  <h2><%= t(:user_new) %></h2>

  <%= form_for [:admin, @user] do |form| %>

  <fieldset>
    <legend><%= t(:personalia) %></legend>
    <div class='field'>
      <%= form.label t(:nick) %>
      <%= form.text_field :nick, autofocus: true, require: true %>
    </div>
  </fieldset>

  <fieldset>
    <legend><%= t(:contact) %></legend>
    <div class='field'>
      <%= form.label t(:email) do %>
        <%= t(:email) %>
      <% end %>
      <%= form.email_field :email, placeholder: 'mail@exmaple.com', require: true %>
    </div>
    <div class='field'>
      <%= form.label t(:email_confirm) do %>
        <%= t(:email_confirm) %>
      <% end %>
      <%= form.email_field :email_confirmation, require: true %>
    </div>
  </fieldset>

  <fieldset>
    <legend><%= t(:security) %></legend>
    <div class='field'>
      <%= form.label t(:password) %>
      <%= form.password_field :password, placeholder: '********', require: true %>
    </div>
    <div class='field'>
      <%= form.label t(:password_confirm) %>
      <%= form.password_field :password_confirmation, require: true %>
    </div>
  </fieldset>
    
  <fieldset>
    <div class='actions'>
      <%= form.submit t(:sign_up) %>
    </div>
  </fieldset>

  <% end %>
</article>
