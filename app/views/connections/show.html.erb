<nav>
  <%= link_to t(:index), recipe_parts_path(anchor: @connection.recipe.id) %> |
  <%= link_to t(:edit), edit_recipe_part_path(@connection.recipe_part) %>
</nav>

<aside>
  <% if notice %>
  <section class='notice'>
    <p id="notice"><%= notice %></p>
  </section>
  <% end %>

  <section>
    <h3><%= @connection.recipe.title %></h3>
    <h4><%= @connection.title %></h4>
  </section>
</aside>

<article>
  <h2><%= @connection.title %></h2>
  <table>
    <thead>
      <tr class='change'>
        <th class='right'><%= t :connection %></th>
        <th class='right'><%= t :scale %></th>
      </tr>
    </thead>
    <tbody>
      <tr class='change'>
        <td><%= @connection.child.title %></td>
        <td class='right'>x <%= number_to_human @connection.scale %></td>
      </tr>
      <tr class='change'>
        <td colspan='2'><%= link_to t(:change), edit_connection_path(@connection) %></td>
      </tr>
    </tbody>
  </table>
</article>
