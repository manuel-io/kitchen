<nav>
  <%= link_to 'New Component', new_component_path %>
</nav>

<aside>
  <% if notice %>
  <section class='notice'>
    <p id="notice"><%= notice %></p>
  </section>
  <% end %>
</aside>

<article>
  <h2>Components</h2>

  <% @recipes.each do |recipe| %>
  <h3 class='recipe'><a href='<%= recipe_path recipe %>'><%= recipe.title %></a></h3>
    <table>
      <tbody>
        <% recipe.components.order(:title).each do |component| %>
        <tr>
          <td><%= component.title %></td>
          <td><%= link_to 'Show', component %></td>
          <td><%= link_to 'Edit', edit_component_path(component) %></td>
          <td><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</article>

