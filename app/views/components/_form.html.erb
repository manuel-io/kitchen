<%= form_for(component) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.select(:recipe_id) do %>
      <% recipes = Recipe.order(created_at: :desc).map { |value| [value.title, value.id] } %>
      <%= options_for_select(recipes, selected: component.recipe_id) %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
