<nav>
  <%= link_to 'New Recipe', new_recipe_path %>
</nav>


<aside>
  <% if notice %>
  <section class='notice'>
    <p id="notice"><%= notice %></p>
  </section>
  <% end %>

  <section>
  <div id='kitcat'>
  <% @ids.each do |id| %>
    <%= image_tag url_for(controller: "recipes", action: "show_picture", id: id) %>
  <% end %>
  </div>
  </section>
</aside>

<article>
  <h2>Recipes</h2>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.title %></td>
          <td><%= link_to 'Show', recipe %></td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</article>
